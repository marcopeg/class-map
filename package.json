{
  "name": "class-map",
  "version": "0.0.1",
  "description": "Class definition utility for ReactJS and other frameworks",
  "main": "./lib/class-map.js",
  "jsnext:main": "./src/class-map.js",
  "scripts": {
    "build:lib": "babel src --out-dir lib",
    "build:umd": "webpack src/index.js dist/redux-mini-router.js --config webpack.config.development.js",
    "build:umd:min": "webpack src/index.js dist/redux-mini-router.min.js --config webpack.config.production.js",
    "build": "npm run build:lib && npm run build:umd && npm run build:umd:min",
    "clean": "rimraf lib dist coverage",
    "lint": "eslint src test",
    "prepublish": "npm run clean && npm run build",
    "test": "mocha --compilers js:babel-core/register --recursive --require ./test/setup.js",
    "test:watch": "npm test -- --watch",
    "test:cov": "babel-node ./node_modules/isparta/bin/isparta cover ./node_modules/mocha/bin/_mocha -- --recursive"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:marcopeg/class-map.git"
  },
  "files": [
    "dist",
    "lib",
    "src"
  ],
  "keywords": [
    "class",
    "classes",
    "addClass",
    "removeClass",
    "toggleClass",
    "react",
    "reactjs",
    "utility",
    "map"
  ],
  "author": "Marco Pegoraro <hello@marcopeg.com> (http://github.com/marcopeg)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/marcopeg/class-map/issues"
  },
  "homepage": "https://github.com/marcopeg/class-map",
  "devDependencies": {
    "babel-cli": "^6.3.17",
    "babel-core": "^6.3.26",
    "babel-eslint": "^5.0.0-beta4",
    "babel-loader": "^6.2.0",
    "babel-plugin-transform-decorators-legacy": "^1.2.0",
    "babel-preset-es2015-loose": "^6.1.4",
    "babel-preset-react": "^6.3.13",
    "babel-preset-stage-0": "^6.3.13",
    "eslint": "^1.7.1",
    "eslint-plugin-react": "^3.6.3",
    "expect": "^1.8.0",
    "isparta": "4.0.0",
    "istanbul": "^0.3.17",
    "jsdom": "~5.4.3",
    "mocha": "^2.2.5",
    "rimraf": "^2.3.4",
    "webpack": "^1.11.0"
  }
}
